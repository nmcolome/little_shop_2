<!DOCTYPE html>
<html>
  <head>
    <title>LittleShop</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
  </head>

  <body>
    <header>
      <h1>Little Shop</h1>
      <%= image_tag 'open.svg', alt: 'logo', class: 'logo' %>
    </header>
    <nav class="nav-container">
      <%= link_to 'Items', '/items', class: 'link' %>
      <%= link_to 'Merchants', '/merchants', class: 'link' %>
    </nav>
    <% flash.each do |name, msg| %>
      <%= content_tag :div, msg, class: "flash #{name}" %>
    <% end %>
    <section>
      <%= yield %>
    </section>
  </body>
</html>
