<div class="reviews">
  <h2 class="title">Reviews</h2>
  <%= link_to 'Add review', "/items/#{@item.id}/reviews/new", class: "link regular" %>

  <% @item.reviews.each do |review| %>
  <div class="review-card">
    <%= review.rating %> <p class="review-title"><%= review.title %></p>
    <p><%= review.content %></p>
  </div>
  <% end %>
</div>