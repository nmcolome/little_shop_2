<h2 class='page-title'>New Merchant</h2>

<%= form_tag '/merchants' do %>
  <%= label_tag 'name' %>
  <%= text_field_tag 'merchant[name]', nil, class: 'input' %>

  <%= label_tag 'address' %>
  <%= text_field_tag 'merchant[address]', nil, class: 'input' %>

  <%= label_tag 'city' %>
  <%= text_field_tag 'merchant[city]', nil, class: 'input' %>

  <%= label_tag 'state' %>
  <%= select_tag 'merchant[state]', options_for_select(Merchant.states.keys), class: 'dropdown states-list' %>

  <%= label_tag 'zip' %>
  <%= text_field_tag 'merchant[zip]', nil, class: 'input'  %>

  <%= submit_tag 'Create', class: 'button new button-form' %>
<% end %>
