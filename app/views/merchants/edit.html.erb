<%= form_tag "/merchants/#{@merchant.id}", method: :patch do %>
  <%= label_tag 'name' %>
  <%= text_field_tag 'merchant[name]', "#{@merchant.name}" %>

  <%= label_tag 'address' %>
  <%= text_field_tag 'merchant[address]', "#{@merchant.address}" %>

  <%= label_tag 'city' %>
  <%= text_field_tag 'merchant[city]', "#{@merchant.city}" %>

  <%= label_tag 'state' %>
  <%= text_field_tag 'merchant[state]', "#{@merchant.state}" %>

  <%= label_tag 'zip' %>
  <%= text_field_tag 'merchant[zip]', "#{@merchant.zip}" %>

  <%= submit_tag 'Update' %>
<% end %>