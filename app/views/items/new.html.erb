<%= form_tag "/merchants/#{params[:merchant_id]}/items" do %>
  <%= label_tag 'name' %>
  <%= text_field_tag 'item[name]', nil, placeholder: 'Your product name...', class: 'input' %>

  <%= label_tag 'price' %>
  <%= text_field_tag 'item[price]', nil, placeholder: 'Set the price in USD...', class: 'input' %>

  <%= label_tag 'description' %>
  <%= text_area_tag 'item[description]', nil, placeholder: 'A description for your product...', class: 'input' %>

  <%= label_tag 'inventory' %>
  <%= text_field_tag 'item[inventory]', nil, placeholder: 'Set available inventory...', class: 'input' %>

  <%= label_tag 'image' %>
  <%= text_field_tag 'item[image]', nil, placeholder: 'e.g https://placehold.it/300x300.jpg', class: 'input' %>

  <%= submit_tag 'Create', class: 'button new' %>
<% end %>
