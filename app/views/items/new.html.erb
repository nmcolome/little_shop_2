<%= form_tag "/merchants/#{params[:merchant_id]}/items" do %>
  <%= label_tag 'name' %>
  <%= text_field_tag 'item[name]' %>

  <%= label_tag 'price' %>
  <%= text_field_tag 'item[price]' %>

  <%= label_tag 'description' %>
  <%= text_field_tag 'item[description]' %>

  <%= label_tag 'inventory' %>
  <%= text_field_tag 'item[inventory]' %>

  <%= label_tag 'image' %>
  <%= text_field_tag 'item[image]' %>

  <%= submit_tag 'Create' %>
<% end %>
