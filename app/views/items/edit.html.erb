<h2 class='page-title'>Update Item</h2>

<%= form_tag "/items/#{@item.id}", method: :patch do %>
  <%= label_tag 'name' %>
  <%= text_field_tag 'item[name]', @item.name, class: 'input' %>

  <%= label_tag 'description' %>
  <%= text_area_tag 'item[description]', @item.description, class: 'input' %>

  <div>
    <%= label_tag 'price' %> (USD)
  </div>
  <%= number_field_tag 'item[price]', @item.price, class: 'input', step: 0.01 %>

  <%= label_tag 'inventory' %>
  <%= number_field_tag 'item[inventory]', @item.inventory, class: 'input' %>

  <%= label_tag 'image' %>
  <%= text_field_tag 'item[image]', @item.image, class: 'input' %>

  <%= submit_tag 'Update', class: 'button new button-form' %>
<% end %>
